{
  "name": "jest-fp-ts-matchers",
  "version": "0.4.1",
  "description": "Collection of monad matchers to ease testing with Jest",
  "keywords": [
    "fp-ts",
    "jest"
  ],
  "author": {
    "name": "Causaly Team",
    "email": "front-end@causaly.com",
    "url": "https://www.causaly.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/causaly/jest-fp-ts-matchers.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build:cjs": "tsc -p ./tsconfig.build-cjs.json",
    "build:esm": "tsc -p ./tsconfig.build-esm.json",
    "build:types": "tsc -p ./tsconfig.build-types.json",
    "build": "rimraf dist && concurrently \"npm run build:types\" \"npm run build:esm\" \"npm run build:cjs\"",
    "lint": "eslint lib --ext .ts",
    "format": "prettier --config ./.prettierrc --ignore-path .gitignore -w .",
    "test": "jest --config jest.config.js",
    "coverage": "jest --config jest.config.js --coverage",
    "changeset": "changeset",
    "prerelease": "npm run build && npm run test",
    "release": "changeset publish"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc --write"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.18.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.13",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "concurrently": "^6.5.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "4",
    "jest": "^29.3.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "fp-ts": "^2.14.0"
  }
}
